{
  "name": "@hollowverse/utils",
  "version": "0.0.0-Set-by-CI-when-publishing",
  "description": "Common helper functions and code quality scripts for Hollowverse repos",
  "repository": "https://github.com/hollowverse/utils",
  "license": "Unlicense",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "validate-filenames": "validate-filenames --config validateFilenames.js",
    "lint-ts": "tslint --project ./src 'src/**/*.ts{,x}'",
    "check-ts": "tsc --project ./src --noEmit",
    "build/ts": "tsc --project ./src",
    "build/babel": "babel helpers -d helpers && babel bin -d bin",
    "build": "run-s clean build/ts build/babel",
    "set-version": "node bin/setVersion.js",
    "lint-staged": "lint-staged",
    "clean": "del-cli helpers bin",
    "lint": "run-p -c --aggregate-output lint-ts",
    "pretest": "run-p -c --aggregate-output lint validate-filenames lint-staged 'clown check'",
    "test": "run-p --aggregate-output -l check-ts",
    "clown": "clown",
    "pre-push": "yarn test",
    "pre-commit": "yarn pretest",
    "tslint": "yarn lint-ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ]
  },
  "bin": {
    "set-version": "./bin/setVersion.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.44",
    "@types/aws-lambda": "^0.0.34",
    "bluebird": "^3.5.1",
    "common-tags": "^1.7.2",
    "glob": "^7.1.2",
    "jszip": "^3.1.4",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "shelljs": "^0.7.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/polyfill": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@hollowverse/clown": "^0.0.3",
    "@hollowverse/config": "^6.1.0",
    "@hollowverse/validate-filenames": "^1.4.0",
    "@types/bluebird": "^3.5.20",
    "@types/common-tags": "^1.4.0",
    "@types/glob": "^5.0.32",
    "@types/jszip": "^3.1.3",
    "@types/lodash": "^4.14.74",
    "@types/minimatch": "^3.0.0",
    "@types/node": "^8.0.24",
    "@types/shelljs": "^0.7.4",
    "del-cli": "^1.1.0",
    "eslint": "^4.18.2",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.10.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "yarnhook": "^0.1.1",
    "@babel/node": "^7.0.0-beta.44"
  },
  "engines": {
    "node": ">= 6.10"
  },
  "private": false,
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  }
}
